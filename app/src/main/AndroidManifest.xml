<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rentabike">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.Bike.EditBikeActivity"
            android:parentActivityName=".ui.BikeActivity" />
        <activity
            android:name=".ui.Bike.AddBikeActivity"
            android:parentActivityName=".ui.BikeActivity" />
        <activity
            android:name=".ui.Bike.ShowBikeActivity"
            android:parentActivityName=".ui.BikeActivity" />
        <activity
            android:name=".ui.Rent.EditRentActivity"
            android:parentActivityName=".ui.RentActivity" />
        <activity
            android:name=".ui.Rent.AddRentActivity"
            android:parentActivityName=".ui.RentActivity" />
        <activity android:name=".ui.RentActivity" />
        <activity android:name=".ui.BikeActivity" />
        <activity android:name=".ui.SettingsActivity" />
        <activity android:name=".ui.AboutActivity" />

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>